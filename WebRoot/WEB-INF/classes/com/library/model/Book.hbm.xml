<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.library.model.Book" table="t_book">
        <id name="bookId" type="java.lang.Integer">
            <column name="book_id" />
            <generator class="assigned"></generator>
        </id>
        <property name="bookName" type="java.lang.String">
            <column name="book_name" length="20" />
        </property>
        <property name="bookAuthor" type="java.lang.String">
            <column name="book_author" length="20" />
        </property>
        <property name="bookPub" type="java.lang.String">
            <column name="book_pub" length="20" />
        </property>
        <property name="bookNum" type="java.lang.String">
            <column name="book_num" length="20" />
        </property>
        <property name="sortId" type="java.lang.String">
            <column name="sort_id" length="20" />
        </property>
        <property name="bookRecord" type="java.util.Date">
            <column name="book_record" length="10" />
        </property>
        <property name="bookcaseId" type="java.lang.Integer">
            <column name="bookcase_id" />
        </property>
        <property name="bookcaseLayer" type="java.lang.Integer">
            <column name="bookcase_layer" />
        </property>
    </class>
</hibernate-mapping>
